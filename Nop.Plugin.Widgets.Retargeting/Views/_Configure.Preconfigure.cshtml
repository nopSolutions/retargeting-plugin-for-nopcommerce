@model Nop.Plugin.Widgets.Retargeting.Models.ConfigurationModel

<div class="card-body">
    <div class="card card-default">
        <div class="card-body">
            <div class="form-group row">
                <div class="col-md-12">
                    <h4>This panel allows you to preconfigure the store for correct working:</h4>
                    <ul class="margin-bottom">
                        <li>Set "Display cart after adding product" to false</li>
                        <li>Set "Display wishlist after adding product" to false</li>
                        <li>Set "Default picture zoom enabled" to true</li>
                        <li>Enable "Order completed" page</li>
                    </ul>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-12">
                    <button type="submit" name="preconfigure" class="btn btn-primary">
                        @T("Plugins.Widgets.Retargeting.PreconfigureButton")
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>